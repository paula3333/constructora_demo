<%= form_with(model: material) do |form| %>
  <% if material.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(material.errors.count, "error") %> prohibited this material from being saved:</h2>

      <ul>
        <% material.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :measure, style: "display: block" %>
    <%= form.text_field :measure %>
  </div>


<div>
    <%= form.label :brand_id, class:"form-label"%>
    <% if material.brand %>
      <%= form.select(:brand_id, options_from_collection_for_select(brands, :id, :name, material.brand_id), { }, {class: "form-select"}) %>
    <% else %>
      <%= form.select(:brand_id, options_from_collection_for_select(brands, :id, :name),{include_blank: "Elige un material"}, {class: "form-select"}) %>
  <% end %>
</div>

<div>
    <%= form.label :category_id, class:"form-label"%>
    <% if material.brand %>
      <%= form.select(:category_id, options_from_collection_for_select(categories, :id, :name, material.brand_id), { }, {class: "form-select"}) %>
    <% else %>
      <%= form.select(:category_id, options_from_collection_for_select(categories, :id, :name),{include_blank: "Elige un material"}, {class: "form-select"}) %>
  <% end %>
</div>

<div>
  <%= form.submit %>
  
</div>
<% end %>

